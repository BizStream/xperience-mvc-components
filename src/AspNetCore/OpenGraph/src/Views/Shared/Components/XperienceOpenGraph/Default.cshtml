@model OpenGraphData

@if( Model == null )
{
	return;
}

<meta name="og:type" content="website" />

@if( !string.IsNullOrWhiteSpace( Model?.Title ) )
{
    <meta name="og:title" content="@Model.Title" />
}

@if( !string.IsNullOrWhiteSpace( Model?.Description ) )
{
    <meta name="og:description" content="@Model.Description" />
}

@if( Model?.ImageUrl != null )
{
    <meta name="og:image" content="@Model.ImageUrl" />
}

@if( Model?.VideoUrl != null )
{
    <meta name="og:video" content="@Model.VideoUrl" />
}

<link rel="og:url" href="@Url.Kentico().PageCanonicalUrl()" />
