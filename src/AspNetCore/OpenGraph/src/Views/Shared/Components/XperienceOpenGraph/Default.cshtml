@using BizStream.Kentico.Xperience.AspNetCore.Components.OpenGraph.Abstractions
@using Kentico.Content.Web.Mvc
@using Kentico.Web.Mvc

@model OpenGraphData

@if (Model == null)
{
	return;
}

<meta property="og:url" content="@Url.Kentico().PageCanonicalUrl()" />
<meta property="og:type" content="website" />

@if (!string.IsNullOrWhiteSpace(Model?.Title))
{
	<meta property="og:title" content="@Model.Title" />
}

@if (!string.IsNullOrWhiteSpace(Model?.Description))
{
	<meta property="og:description" content="@Model.Description" />
}

@if (Model?.ImageUrl != null)
{
	<meta property="og:image" content="@Model.ImageUrl" />
}

@if (Model?.VideoUrl != null)
{
	<meta property="og:video" content="@Model.VideoUrl" />
}
